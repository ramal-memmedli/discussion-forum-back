@model GetTopicVM

<div class="topic">
    <div class="topic-header">
        <div class="topic-header-left">
            <a asp-controller="user" asp-action="index" asp-route-id="@Model.AuthorUsername" class="topic-author">
                <img class="author-image" src="~/uploads/images/user/@Model.AuthorImage" alt="@Model.AuthorUsername">
                @Model.AuthorFullName
                <a href="#" class="verified-profile-small"><i class="fa-solid fa-check"></i></a>
            </a>
            <i class="circle-separator fa-solid fa-circle"></i>
            <p class="topic-create-date">@Model.CreateDate</p>
        </div>
        <div class="topic-header-right">
            <a class="topic-actions" href=""><i class="fa-solid fa-ellipsis"></i></a>
        </div>
    </div>
    <div class="topic-body">
        <a asp-controller="topic" asp-action="index" asp-route-id="@Model.Id">@Model.Title</a>
        <ul>
            <li><a href="#">@Model.TopicCategory.Name</a></li>
        </ul>
    </div>
    <div class="topic-footer">
        <div class="topic-footer-left">
            <div class="topic-view-count">
                <i class="fa-solid fa-eye"></i> <span class="view-count"> @Model.ViewCount Views</span>
            </div>

            <div class="topic-answer-count">
                <i class="fa-solid fa-message"></i> <span class="answer-count"> @Model.AnswerCount Answers</span>
            </div>
        </div>
        <div class="topic-footer-right">
            <a href="#"><i class="fa-solid fa-bookmark"></i></a>
            <a href="#"><i class="fa-solid fa-share"></i></a>
        </div>
    </div>
</div>