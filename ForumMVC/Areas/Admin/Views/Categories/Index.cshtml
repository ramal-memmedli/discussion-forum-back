@model List<Category>

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title">Categories</h4>
            <a asp-area="admin" asp-controller="categories" asp-action="add" class="btn btn-success">Add category</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Category category in Model)
                    {
                        <tr>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                <a asp-area="admin" asp-controller="categories" asp-action="edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>