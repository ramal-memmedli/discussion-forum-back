@model UserProfileVM

<div class="user-profile">
    <div class="user-profile-banner">
        <img class="profile-banner-image" src="~/uploads/images/user/@Model.User.BannerImage" alt="@Model.User.Username">
        <div class="profile-banner-image-color-layer"></div>
    </div>
    <section class="user-profile-header" id="userProfileHeader">
        <div class="profile-details">
            <img src="~/uploads/images/user/@Model.User.ProfileImage" alt="@Model.User.Username" class="profile-image">
            <div class="profile-name-section">
                <a class="profile-fullname" href="#">@Model.User.Name @Model.User.Surname</a>
                <a href="#" class="verified-profile-large"><i class="fa-solid fa-check"></i></a>
            </div>
            <a class="follow-user-button" href="#"><i class="fa-solid fa-plus"></i>Follow</a>

        </div>
    </section>
    <div class="profile-card">
        <div class="profile-details">
            <img src="~/uploads/images/user/@Model.User.ProfileImage" alt="@Model.User.Username" class="profile-image">
            <div class="profile-name-section">
                <a class="profile-fullname" asp-controller="user" asp-action="index" asp-route-id="@Model.User.Username">@Model.User.Username</a>
                <a href="#" class="verified-profile-small"><i class="fa-solid fa-check"></i></a>
            </div>
            <a class="follow-user-button" href="#"><i class="fa-solid fa-plus"></i>Follow</a>

        </div>
    </div>
    <div class="row nomargin">
        <div class="col-lg-12 nopadding">
            <div class="main-flow">
                <nav class="flow-navbar">
                    <ul>
                        <li><a class="active" asp-controller="user" asp-action="index" asp-route-id="@Model.User.Username"><i class="fa-solid fa-hashtag"></i> Flow</a></li>
                        <li><a href="#"><i class="fa-solid fa-rss"></i> Blog</a></li>
                        <li><a href="#"><i class="fa-solid fa-bookmark"></i> Bookmarks</a></li>
                        <li><a href="#"><i class="fa-solid fa-message"></i> Answers</a></li>
                        <div class="flex-separator"> </div>
                        <li><a class="flow-post-topic" asp-controller="topic" asp-action="create"><i class="fa-solid fa-plus"></i> Post topic</a></li>
                    </ul>

                </nav>
                @if (Model.User.TopicCount != 0)
                {
                    @foreach (GetTopicVM topic in @Model.Topics)
                    {
                        @await Html.PartialAsync("_TopicPartial", topic)
                    }
                }
                else
                {
                    <h3>This user doesn't have any topic</h3>
                }
            </div>
        </div>


    </div>

</div>